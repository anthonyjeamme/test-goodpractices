{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-unused-vars": "error",
		"react/prop-types": 0,
		"react/no-unescaped-entities": 0,
		"no-mixed-spaces-and-tabs": 0,
		"semi": ["error", "never"],
		"@typescript-eslint/semi": 0
	}
}
